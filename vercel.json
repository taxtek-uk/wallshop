{
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "dist/spa" } }
  ],
  "functions": {
    "api/*.js": {
      "runtime": "@vercel/node@20.x"
    }
  }
}