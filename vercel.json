{
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "dist/spa" } },
    { "src": "api/**/*.ts", "use": "@vercel/node" }
  ],
  "functions": {
    "api/*.ts": {
      "runtime": "nodejs18.x"
    }
  }
}
